<view class="header-parent">
    <view class="header">
        <!-- <view class="one">
            <view class="back" bindtap="navtourl"></view>
        </view> -->
        <import src="../exit.wxml"/>
        <template is="exit" />
        <view class="logo"></view>
        <view class="three">累计救援：{{count}}</view>
    </view>
    <view class="top_banner {{!tabflag?'top_banner2':''}}">
        <view class="top_banner_item {{tabflag?'active':''}}" data-type='1' bindtap='tapTab'>我的救援记录</view>
       
        <view class="top_banner_item {{!tabflag?'active':''}}" data-type='2' bindtap='tapTab'>所有救援记录</view>
    </view>
</view>
<scroll-view class="scroll-list" scroll-y='true' lower-threshold='100' bindscrolltolower='scrolltolower'>

    <view class="list clearfix" wx:for="{{comments}}">
        <view class="list-l">
            <image src="https://rescue.gacfcasales.com/carOwner/images/tuocheing.png" class="img-tag" wx:if="{{item.reliefType==1}}"></image>
            <image src="https://rescue.gacfcasales.com/carOwner/images/dadianing.png" class="img-tag" wx:if="{{item.reliefType==2}}"></image>
            <image src="https://rescue.gacfcasales.com/carOwner/images/huantaiing.png" class="img-tag" wx:if="{{item.reliefType==3}}"></image>
            <image src="https://rescue.gacfcasales.com/carOwner/images/songyouing.png" class="img-tag" wx:if="{{item.reliefType==4}}"></image>
            <image src="https://rescue.gacfcasales.com/carOwner/images/kunjingjiuyuaning.png" class="img-tag" wx:if="{{item.reliefType==5}}"></image>
            <image src="https://rescue.gacfcasales.com/carOwner/images/xianchangjiuyuaning.png" class="img-tag" wx:if="{{item.reliefType==6}}"></image>
        </view>
        <view class="list-r">
            <view class="list-one">
                <view class="list-one-one" style="width:250rpx">车主姓名：<text class="list-one-one-o" style=" white-space:nowrap;">{{item.carOwnerName}}</text></view>
                <view class="list-one-one" style="margin-left:10rpx;">救援日期：<text class="list-one-one-o">{{item.orderTime}}</text></view>
            </view>
             <view class="list-two">
                <view class="list-two-two">响应速度：<text style="color:#21242e">{{item.responseSpeed}}</text></view>
                <view class="list-two-two" style="margin-left:20rpx;">现场服务：<text style="color:#21242e">{{item.serviceAttitude}}</text></view>
                <view class="list-two-two" style="margin-left:20rpx;">功能使用：<text style="color:#21242e">{{item.practicability}}</text></view>
            </view>
            <view class="list-two" wx:if="{{item.comment}}"  style="width:100%">
              <view class="list-two-two" style="width:100%">车主评价：</view>
              <view class="list-two-two" style="text-align:left;word-wrap:break-word;white-space:normal"><text style="line-height:35rpx;color:#21242e">{{item.comment}}</text></view>
            </view>
            <view class="list-two" wx:if="{{item.feedback}}"  style="width:100%">
              <view class="list-two-two" style="width:100%" >反馈：</view>
              <view class="list-two-two" style="text-align:left;word-wrap:break-word;white-space:normal"><text style="line-height:35rpx;color:#21242e">{{item.feedback}}</text></view>
            </view>
        </view>
    </view>
    <view class="null-data">{{tipText}}</view>
</scroll-view>
<!--加载器-->
<loading hidden="{{!loading}}">
    {{loadingMsg}}
</loading>