<view style="padding: 30rpx;">
  <block wx:if="{{code}}">
    <view class="header">
      <view class="rescue-status">救援状态：{{rescueStaus[status]}}</view>
      <view class="dashed-line"></view>
      <view class="rescue-style">
        <view class="defstyle">
          <view class="time" wx:if="{{timeStep.stepStatus>0}}">{{ timeStep.caseTime }}</view>
          <view class="time gang" wx:else>--:--</view>
          <view class="circle-blue" wx:if="{{timeStep.stepStatus==1}}"></view>
          <view class="circle" wx:else></view>
          <view class="style-name active" wx:if="{{timeStep.stepStatus==1}}">开案</view>
          <view class="style-name" wx:else>开案</view>
        </view>
        <view class="defstyle">
          <view class="time" wx:if="{{timeStep.stepStatus>1}}">{{ timeStep.sendTime }}</view>
          <view class="time gang" wx:else>--:--</view>
          <view class="circle-blue" wx:if="{{timeStep.stepStatus==2}}"></view>
          <view class="circle" wx:else></view>
          <view class="style-name active" wx:if="{{timeStep.stepStatus==2}}">派案</view>
          <view class="style-name" wx:else>派案</view>
        </view>
        <view class="defstyle">
          <view class="time" wx:if="{{timeStep.stepStatus>2}}">{{ timeStep.arrivalTime }}</view>
          <view class="time gang" wx:else>--:--</view>
          <view class="circle-blue" wx:if="{{timeStep.stepStatus==3}}"></view>
          <view class="circle" wx:else></view>
          <view class="style-name active" wx:if="{{timeStep.stepStatus==3}}">到达</view>
          <view class="style-name" wx:else>到达</view>
        </view>
        <view class="defstyle">
          <view class="time" wx:if="{{timeStep.stepStatus>3}}">{{ timeStep.rescueTime }}</view>
          <view class="time gang" wx:else>--:--</view>
          <view class="circle-blue" wx:if="{{timeStep.stepStatus==4}}"></view>
          <view class="circle" wx:else></view>
          <view class="style-name active" wx:if="{{timeStep.stepStatus==4}}">救援中</view>
          <view class="style-name" wx:else>救援中</view>
        </view>
        <view class="defstyle">
          <view class="time" wx:if="{{timeStep.stepStatus>4}}">{{ timeStep.rescueTime }}</view>
          <view class="time gang" wx:else>--:--</view>
          <view class="circle-blue" wx:if="{{timeStep.stepStatus==5}}"></view>
          <view class="circle" wx:else></view>
          <view class="style-name active" wx:if="{{timeStep.stepStatus==5}}">完成</view>
          <view class="style-name" wx:else>完成</view>
        </view>
      </view>
    </view>
    <view class="rescuebox">
      <view class="title">救援信息</view>
      <view class="box-content">
        <view class="rescuecar-style">
          <image style="width: 35rpx;height: 35rpx;" src="../../images/jhmei/rescue_type_icon.png" />
          <text class="name">救援类型：</text>{{rescueStyle[apply.reliefType] }}
        </view>
        <view class="rescuecar-style">
          <image style="width: 25rpx;height: 37rpx;" src="../../images/jhmei/position_white_icon.png" />
          <text class="name">救援位置：</text>{{apply.address }}
        </view>
      </view>
    </view>
    <view class="rescue-info">
      <view class="tel-box">
        <view>
          <view class="disbtel">
            <image src="../../images/jhmei/vehicle_owner_phone.png" />
          </view>
          <view class="touch-our arrow-right" bindtap="contactVehicleOwner">联系车主</view>
        </view>
      </view>
      <view class="tishi">
        <view class="content">*提示：请保持手机打开本页面，</view>
        <view class="content">以免信号丢失造成车主投诉！</view>
      </view>
      <view class="rescue-progress">
        <view class="progress-icon">
          <image src="../../images/jhmei/arrive_scene_icon.png"/>
          <image src="../../images/jhmei/rescuing_icon.png"/>
          <image src="../../images/jhmei/rescue_over_icon.png"/>
        </view>
        <view class="dashed-line">
          <text></text>
          <text></text>
          <text></text>
        </view>
        <view class="progress-text">
          <text wx:if="{{btnflag==2}}" bindtap="updateRescueProgress" data-type="1">到达</text>
          <text class="active" wx:elif="{{btnflag>=3}}">到达</text>
          <text wx:if="{{btnflag==2||btnflag==3}}" bindtap="updateRescueProgress" data-type="2">救援中</text>
          <text class="active" wx:elif="{{btnflag>=4}}">救援中</text>
          <text wx:if="{{btnflag==2||btnflag==3||btnflag==4}}" bindtap="updateRescueProgress" data-type="3">完成</text>
          <text class="active" wx:elif="{{btnflag>=5}}">完成</text>
        </view>
      </view>
    </view>
  </block>
  <block wx:else>
    <view class="header">
      <view class="rescue-status">救援状态：{{rescueStaus[status]}}</view>
      <view class="dashed-line"></view>
      <view class="rescue-style">
        <view class="defstyle">
          <view class="time gang"></view>
          <view class="circle"></view>
          <view class="style-name">开案</view>
        </view>
        <view class="defstyle">
          <view class="time gang"></view>
          <view class="circle"></view>
          <view class="style-name">派案</view>
        </view>
        <view class="defstyle">
          <view class="time gang"></view>
          <view class="circle"></view>
          <view class="style-name">到达</view>
        </view>
        <view class="defstyle">
          <view class="time gang"></view>
          <view class="circle"></view>
          <view class="style-name">救援中</view>
        </view>
        <view class="defstyle">
          <view class="time gang"></view>
          <view class="circle"></view>
          <view class="style-name">完成</view>
        </view>
      </view>
    </view>
    <view class="rescuebox">
      <view class="title">救援信息</view>
      <view class="box-content">
        <view class="rescuecar-style">
          <image style="width: 35rpx;height: 35rpx;" src="../../images/jhmei/rescue_type_icon.png" /><text class="name">救援类型：</text>暂无
        </view>
        <view class="rescuecar-style">
          <image style="width: 25rpx;height: 37rpx;" src="../../images/jhmei/position_white_icon.png" /><text class="name">救援位置：</text>暂无
        </view>
      </view>
    </view>
    <view class="rescue-info">
      <view class="tel-box">
        <view>
          <view class="disbtel">
            <image src="../../images/jhmei/vehicle_owner_phone.png" />
          </view>
          <view class="touch-our arrow-right" bindtap="contactVehicleOwner">联系车主</view>
        </view>
      </view>
      <view class="tishi">
        <view class="content">*提示：请保持手机打开本页面，</view>
        <view class="content">以免信号丢失造成车主投诉！</view>
      </view>
      <view class="rescue-progress">
        <view class="progress-icon">
          <image src="../../images/jhmei/arrive_scene_icon.png" />
          <image src="../../images/jhmei/rescuing_icon.png" />
          <image src="../../images/jhmei/rescue_over_icon.png" />
        </view>
        <view class="dashed-line">
          <text></text>
          <text></text>
          <text></text>
        </view>
        <view class="progress-text">
          <text>到达</text>
          <text>救援中</text>
          <text>完成</text>
        </view>
      </view>
    </view>
  </block>
</view>
<!-- 加载器 -->
<loading hidden="{{!loading}}">{{ loadingMsg }}</loading>
