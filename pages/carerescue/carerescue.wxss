page{
    /* background: #21242e; */
   background:url(https://rescue.gacfcasales.com/carOwner/images/botttombg.jpg) repeat;
}
.recubg{
    position:relative;
}
.recubg .recu_switch{
    position:absolute;
    line-height:40px;
    background:none;
    bottom:0px;
    left:0px;
    right:0px;
    color:#fff;
}
.recu_flex{
    display: flex;
    justify-content:center;
    font-size: 14px;
    width:100%;
    height:88rpx;
    background:url(https://rescue.gacfcasales.com/carOwner/images/tab1.png);
    background-size: cover;
}
.recu_flex2{
  background:url(https://rescue.gacfcasales.com/carOwner/images/tab2.png);
    background-size: cover;
}
.flexitem{
   text-align: center;
   line-height: 40px;
   height: 40px;
}
.flexitem image{
    width:10px;
    height:20px;
    vertical-align:middle;
}
.recuopr{
    padding:20px 0;
    background-color: none;
    width: 100%;
}
.recuopr_item{
    line-height:40px;
    background-color:#fff;
    width:80%;
    margin:auto;
    border:#003366 1px solid;
    margin-bottom: 10px;
    position: relative;
}
.recuopr_item .itemimg{
    height: 20px;
    width: 80px;
    vertical-align:middle;
    padding-left: 10px;
}
.recuopr_itemicon,.recuopr_itemtxt{
    float: left;
    width: 17%;
    overflow:hidden;
}
.recuopr_itemtxt{
    /*margin-left: 10px;*/
    width: 55%;
    margin-left:1%;
}
.txt,.addsel{
    min-width: 100%;
    line-height: 40px;
    height: 40px;
    width: 100%;
    background:none;
}
.recuopr_item:after{
    display: block;
    content: "";
    clear: both;
}
.vaildcode{
    line-height: 40px;
    height: 40px;
    background-color: #2f4871;
    width: 100px;
    position: absolute;
    right: 0px;
    top: 0px;
    color: #fff;
    font-size: 14px;
    text-align: center;
    border-radius:0px;
}
.recuopr_itemtxtflex{
    display: flex;
    justify-content:center;
    font-size: 12px;
    color: #BFC1C5;
}
.recuopr_itemtxtflexitem1{
    flex: 1;
    text-align: center;
}
.recuopr_itemtxtflexitem{
    flex: 4;
}
.rescuesel{
    display: flex;
    width: 80%;
    margin: auto;
    color: #fff;
    font-size: 14px;
    margin-top: 20px;
}
.rescuesel .item0{
    flex: 1;
    text-align: left
}
.rescuesel .item1{
    flex: 1;
    text-align:center;
    margin-left:0px;
}
.rescuesel .item2{
    flex: 1;
    margin-left:0px;
    width:100%;
    display:block;
    text-align:right;
    box-sizing:border-box;

}
.item0txt{
    margin-left: 18px;
    color:#cdcdcd;
}
.item1txt{
    margin-left: 0px;
    color:#cdcdcd;
}
.item2txt{
    margin-right: 12px;
    color:#cdcdcd;
}
.item0txt.blue,.item1txt.blue,.item2txt.blue{
  color:#003366;
}
.rescuehelp{
    width: 100%;
    background-color: #627ECC;
    line-height: 40px;
    text-align: center;
    color: #fff;
    font-size: 14px;
}
.addsel{
    border:none;
    background:none;
    font-size:12px;
    color:#BFC1C5;
    white-space:nowrap;
    overflow: hidden;
}
.zhehaoindex{
    height:100%;
width:100%;
position:absolute;
background-color:rgba(0, 0, 0, .8);
top:0;
bottom:0;
left:0;
right:0;
z-index: 10;
}
.zhehaoindex .salersbd{
    position: absolute;
    left: 0;
    right: 0;
    top:0px;
    bottom: 0;
    margin: auto;
    font-size: 14px;
    height: 50px;
    background-color:#fff;
}
.pickerinfo{
    float: left;
    text-align: center;
    line-height: 50px;
    font-size: 12px;
}
.need-help{
    border-radius: 0;
    background:#2f4871;
    color:#fff;
}
.flexitem-v{
    width:100px;
height:32px;
margin:auto;
border-radius:10px;
border:solid 1px #fff;
line-height:32px;
display:inline-block;
}
.phcolor{
  font-size:12px;
  color:#BFC1C5;
}
