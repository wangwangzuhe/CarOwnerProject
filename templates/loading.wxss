.fixbox{
  position: fixed;
  z-index:9999;
  top:0;
  left:0;
  bottom:0;
  width:100%;
  background:rgba(0, 0, 0, 0.5);
}
.loading{
            width: 80rpx;
            height: 40rpx;
            margin: 0 auto;
            top:50%;
            left:50%;
            margin-top:-20rpx;
            position: absolute;
            z-index:10000;
            margin-left:-40rpx;
        }
  .loading .loadingtext{
      display: inline-block;
      width: 8rpx;
      height: 100%;
      border-radius: 4rpx;
      margin-right: 8rpx;
      background: lightgreen;
      -webkit-animation: load 1s ease infinite;
  }
  @-webkit-keyframes load{
      0%,100%{
          height: 40rpx;
          background: lightgreen;
      }
      50%{
          height: 70rpx;
          margin: -15rpx 0;
          margin-right: 8rpx;
          background: lightblue;
      }
  }
  .loading .loadingtext:nth-child(2){
      -webkit-animation-delay:0.2s;
  }
  .loading .loadingtext:nth-child(3){
      -webkit-animation-delay:0.4s;
  }
  .loading .loadingtext:nth-child(4){
      -webkit-animation-delay:0.6s;
  }
  .loading .loadingtext:nth-child(5){
      -webkit-animation-delay:0.8s;
  } 