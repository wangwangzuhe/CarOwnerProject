@import 'weui.wxss';
@import 'templates/loading.wxss';
page {
  background-color: #000;
}
view,
input,
text,
button,
textarea,
navigator,
label,
picker {
  font: 32rpx PingFang, PingFang-SC-Regular, -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  color: #fff;
}
.weui-cells {
  background-color: unset !important;
}
.weui-cells .weui-cell {
  padding: 0;
  border-bottom: 1rpx #ccc solid;
  padding-left: 20rpx;
}
.weui-cells .weui-cell .weui-cell__hd {
  height: 100rpx;
  line-height: 112rpx;
  width: 60rpx;
}
.weui-cells .weui-cell .weui-cell__bd {
  text-align: left;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.arrow-right {
  position: relative;
}
.arrow-right:after {
  content: '';
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #fff;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 30rpx;
}
.arrow-down {
  position: relative;
}
.arrow-down:after {
  content: '';
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 0 4rpx 4rpx 0;
  border-color: #fff;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -12rpx;
  right: 30rpx;
}
.yellow-circle {
  border-radius: 50%;
  border: 1rpx solid #f5b302;
  display: inline-block;
  font-size: 0;
  padding: 20rpx;
}
.yellow-circle1 {
  border-radius: 50%;
  display: inline-block;
  font-size: 0;
  height:104rpx;
}
.placeholder-cls {
  color: #bfc1c5;
  font-size: 28rpx;
}
.wx-switch-input {
  width: 82rpx !important;
  height: 40rpx !important;
}
.wx-switch-input:before {
  width: 82rpx !important;
  height: 40rpx !important;
}
.wx-switch-input:after {
  width: 37rpx !important;
  height: 37rpx !important;
}
